#!/bin/bash
# Pre-push hook - runs CI validation before allowing push
# Install: cp .githooks/pre-push .git/hooks/pre-push && chmod +x .git/hooks/pre-push

set -e

echo "ğŸ” Running pre-push validation..."

cd docs-portal

# Run the same checks as CI
echo "ğŸ“‹ Validating config..."
npm run validate:config

echo "ğŸ¨ Validating CSS..."
npm run validate:css

echo "ğŸ“Š Validating RCA..."
npm run validate:rca

echo "âœ… Pre-push validation passed!"
echo "   (Full build will run in CI)"
