{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "eIDAS Documents Configuration",
    "description": "Schema for documents.yaml - Single Source of Truth for document metadata",
    "type": "object",
    "required": [
        "version",
        "documents"
    ],
    "properties": {
        "version": {
            "type": "string",
            "description": "Schema version"
        },
        "last_updated": {
            "type": "string",
            "description": "Last modification date"
        },
        "documents": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/document"
            }
        }
    },
    "definitions": {
        "document": {
            "type": "object",
            "required": [
                "title",
                "legalType",
                "category",
                "output_dir"
            ],
            "oneOf": [
                {
                    "required": [
                        "celex"
                    ]
                },
                {
                    "required": [
                        "id"
                    ]
                }
            ],
            "properties": {
                "celex": {
                    "type": "string",
                    "description": "CELEX identifier for EU legal documents"
                },
                "id": {
                    "type": "string",
                    "description": "Custom identifier for supplementary (non-legal) documents"
                },
                "title": {
                    "type": "string",
                    "description": "Document title"
                },
                "shortTitle": {
                    "type": "string",
                    "description": "Human-readable short title (REQUIRED for regulations per DEC-043)"
                },
                "sidebarTitle": {
                    "type": "string",
                    "description": "Optional shorter title for sidebar display"
                },
                "legalType": {
                    "type": "string",
                    "enum": [
                        "regulation",
                        "implementing_regulation",
                        "decision",
                        "recommendation",
                        "directive",
                        "communication",
                        "faq"
                    ],
                    "description": "What the document IS under EU law (or 'faq' for supplementary guidance)"
                },
                "category": {
                    "type": "string",
                    "enum": [
                        "primary",
                        "implementing_act",
                        "referenced",
                        "supplementary"
                    ],
                    "description": "How the document relates to the eIDAS project"
                },
                "cellar_id": {
                    "type": "string",
                    "description": "EU Cellar identifier for Formex download"
                },
                "external_url": {
                    "type": "string",
                    "description": "External URL for non-legal documents"
                },
                "source": {
                    "type": "string",
                    "enum": [
                        "html",
                        "formex",
                        "manual"
                    ],
                    "description": "Source format (html for fallback parser, manual for hand-merged)"
                },
                "output_dir": {
                    "type": "string",
                    "description": "Output directory path"
                }
            }
        }
    }
}